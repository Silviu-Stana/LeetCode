/**
 * @param {string} s
 * @return {number}
 */

var cutString = function(char, str)
{
        let strC = str.replaceAll(char, "");
        let cCount=str.length-strC.length;
        //console.log(cCount);
        
        //Vowel "a" shows up ODD number of times.
        if(cCount % 2 === 1)
        {
                let evenOccurence=0;
                let pos=0;
                
                while(evenOccurence<cCount)
                {
                        //Find next occurence of "a" character.
                        pos = str.indexOf(char, pos);
                        //console.log(pos);
                        
                        // If no more occurrences are found, break the loop
                        if (pos === -1) {break;}
                        
                        pos++;
                        
                        evenOccurence++;
                }
                //By the end of this while loop, we know the position of the final ODD ocurrence of "a" character (the 5th)
                
                return str.substring(0, pos-1).length;
                //after we cut the string, "a" shows up an even number of times only
                //console.log(str);
        }

}

var findTheLongestSubstring = function(s) {
   let substringLength;

substringLength = cutString("a", s);
s = s.substring(0, substringLength);
substringLength = cutString("e", s);
s = s.substring(0, substringLength);
substringLength = cutString("i", s);
s = s.substring(0, substringLength);
substringLength = cutString("o", s);
s = s.substring(0, substringLength);
substringLength = cutString("u", s);
s = s.substring(0, substringLength);
return s;
};


console.log(findTheLongestSubstring("eleetminicoworoep"));